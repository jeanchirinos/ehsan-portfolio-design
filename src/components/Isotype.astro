---
import { Icon } from 'astro-icon'

export interface Props {
  name: string
}

const { name } = Astro.props
---

<picture>
  <Icon name={name} width='32' height='32' />
</picture>

<style lang='scss'>
  picture {
    width: 4rem;
    aspect-ratio: 1;
    border-radius: 50%;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;

    &:first-of-type {
      top: 200px;
      left: 50px;
    }

    &:nth-of-type(2) {
      top: 150px;
      right: 50px;
    }

    &:nth-of-type(3) {
      bottom: 150px;
      right: 50px;
    }
  }
</style>
