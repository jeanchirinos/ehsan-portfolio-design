---
import { Icon } from 'astro-icon'

export interface Props {
  name: string
}

const { name } = Astro.props
---

<picture>
  <Icon name={name} size={32} />
</picture>

<style lang='scss'>
  picture {
    width: 4rem;
    aspect-ratio: 1;
    border-radius: 50%;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;

    &:first-of-type {
      top: 250px;
      left: 0px;
    }

    &:nth-of-type(2) {
      top: 150px;
      // right: 15px;
      right: 0px;
    }

    &:nth-of-type(3) {
      bottom: 250px;
      // right: 15px;
      right: 0px;
    }
  }
</style>
